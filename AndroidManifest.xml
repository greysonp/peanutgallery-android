<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackmit.hierogifics"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         
        <activity
            android:name="com.hackmit.hierogifics.GroupListActivity"
            android:label="@string/app_name" >
           
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hackmit.hierogifics.GroupDetailActivity"
            android:label="@string/title_group_detail"
            android:parentActivityName=".GroupListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupListActivity" />
        </activity>
        <activity
            android:name="com.hackmit.hierogifics.LinkDetailActivity"
            android:label="@string/title_link_detail"
            android:parentActivityName="GroupDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupDetailActivity" />
            </activity>
        
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>

</manifest>
